<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:stretchColumns="*"
    android:background="#000"
    >

    <TableRow
        android:layout_height="wrap_content"
        android:layout_width="match_parent">
        <EditText
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:padding="30dp"
            android:layout_span="4"
            android:phoneNumber="true"
            android:background="#000"
            android:textColor="#FFF"
            android:id="@+id/ketQua"
            android:gravity="right"/>
    </TableRow>

    <TableRow>
        <Button
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="@null"
            android:padding="20dp"
            android:layout_span="3"
            android:background="#222222"
            android:layout_margin="2dp"/>
        <Button
            android:id="@+id/del"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="DELETE"
            android:padding="20dp"
            android:background="#222222"
            android:textColor="#FFF"
            android:layout_margin="2dp"/>


    </TableRow>


    <TableRow>
        <Button
            android:id="@+id/s7"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="7"
            android:textSize="30sp"
            android:textAlignment="center"
            android:padding="25dp"
            android:background="@drawable/changebackground"
            android:textColor="#FFF"
            android:layout_margin="2dp"/>
        <Button
            android:id="@+id/s8"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="8"
            android:textSize="30sp"
            android:textAlignment="center"
            android:padding="25dp"
            android:background="@drawable/changebackground"
            android:textColor="#FFF"
            android:layout_margin="2dp"/>
        <Button
            android:id="@+id/s9"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="9"
            android:textSize="30sp"
            android:textAlignment="center"
            android:padding="25dp"
            android:background="@drawable/changebackground"
            android:textColor="#FFF"
            android:layout_margin="2dp"/>

        <Button
            android:id="@+id/chia"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="/"
            android:textSize="30sp"
            android:textAlignment="center"
            android:padding="25dp"
            android:background="#222222"
            android:textColor="#FFF"
            android:layout_margin="2dp"/>

    </TableRow>

    <TableRow>
        <Button
            android:id="@+id/s4"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="4"
            android:textSize="30sp"
            android:textAlignment="center"
            android:padding="25dp"
            android:background="@drawable/changebackground"
            android:textColor="#FFF"
            android:layout_margin="2dp"/>
        <Button
            android:id="@+id/s5"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="5"
            android:textSize="30sp"
            android:textAlignment="center"
            android:padding="25dp"
            android:background="@drawable/changebackground"
            android:textColor="#FFF"
            android:layout_margin="2dp"/>
        <Button
            android:id="@+id/s6"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="6"
            android:textSize="30sp"
            android:textAlignment="center"
            android:padding="25dp"
            android:background="@drawable/changebackground"
            android:textColor="#FFF"
            android:layout_margin="2dp"/>
        <Button
            android:id="@+id/nhan"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="X"
            android:textSize="30sp"
            android:textAlignment="center"
            android:padding="25dp"
            android:background="#222222"
            android:textColor="#FFF"
            android:layout_margin="2dp"/>
    </TableRow>

    <TableRow>
        <Button
            android:id="@+id/s1"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="1"
            android:textSize="30sp"
            android:textAlignment="center"
            android:padding="25dp"
            android:background="@drawable/changebackground"
            android:textColor="#FFF"
            android:layout_margin="2dp"/>
        <Button
            android:id="@+id/s2"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="2"
            android:textSize="30sp"
            android:textAlignment="center"
            android:padding="25dp"
            android:background="@drawable/changebackground"
            android:textColor="#FFF"
            android:layout_margin="2dp"/>
        <Button
            android:id="@+id/s3"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="3"
            android:textSize="30sp"
            android:textAlignment="center"
            android:padding="25dp"
            android:background="@drawable/changebackground"
            android:textColor="#FFF"
            android:layout_margin="2dp"/>
        <Button
            android:id="@+id/tru"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="-"
            android:textSize="30sp"
            android:textAlignment="center"
            android:padding="25dp"
            android:background="#222222"
            android:textColor="#FFF"
            android:layout_margin="2dp"/>
    </TableRow>

    <TableRow>
        <Button
            android:id="@+id/cham"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="."
            android:textSize="30sp"
            android:textAlignment="center"
            android:padding="25dp"
            android:background="@drawable/changebackground"
            android:textColor="#FFF"
            android:layout_margin="2dp"/>
        <Button
            android:id="@+id/s0"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="0"
            android:textSize="30sp"
            android:textAlignment="center"
            android:padding="25dp"
            android:background="@drawable/changebackground"
            android:textColor="#FFF"
            android:layout_margin="2dp"/>
        <Button
            android:id="@+id/bang"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="="
            android:textSize="30sp"
            android:textAlignment="center"
            android:padding="25dp"
            android:background="@drawable/changebackground"
            android:textColor="#FFF"
            android:layout_margin="2dp"/>
        <Button
            android:id="@+id/cong"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="+"
            android:textSize="30sp"
            android:textAlignment="center"
            android:padding="25dp"
            android:background="#222222"
            android:textColor="#FFF"
            android:layout_margin="2dp"/>
    </TableRow>



</TableLayout>